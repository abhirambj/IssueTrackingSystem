<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane fx:id="createTicketForm" prefHeight="418.0" prefWidth="423.0" style="-fx-background-color: #191d45;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.itmd510.issuetrackingapplication.controllers.CreateTicketFormController">
    <children>
        <VBox layoutX="32.0" layoutY="16.0" prefHeight="260.0" prefWidth="360.0" spacing="10.0" style="-fx-padding: 20;">
            <children>
                <Label style="-fx-text-fill: white;" text="Title" />
                <TextField fx:id="titleField" style="-fx-background-color: #fff;" />
                <Label style="-fx-text-fill: white;" text="Description" />
                <TextField fx:id="descriptionField" style="-fx-background-color: #fff;" />
                <Label style="-fx-text-fill: white;" text="Status" />
                <TextField fx:id="statusField" disable="true" style="-fx-background-color: #fff;" />
                <Label style="-fx-text-fill: white;" text="Assignee" />
                <TextField fx:id="userNameField" disable="true" style="-fx-background-color: #fff;" />
                <Label style="-fx-text-fill: white;" text="Reports To" />
                <TextField fx:id="managerField" disable="true" style="-fx-background-color: #fff;" />
            </children>
        </VBox>

        <!-- HBox for the Submit button -->
        <HBox layoutX="43.0" layoutY="350.0" prefHeight="53.0" prefWidth="349.0" spacing="10.0" style="-fx-padding: 10;">
            <children>
                <Button fx:id="submitButton" onAction="#handleSubmit" prefHeight="33.0" prefWidth="319.0" style="-fx-background-color: #6870d3; -fx-text-fill: white; -fx-padding: 8 15 8 15;" text="Submit" HBox.hgrow="ALWAYS" />
            </children>
        </HBox>
    </children>
</AnchorPane>
