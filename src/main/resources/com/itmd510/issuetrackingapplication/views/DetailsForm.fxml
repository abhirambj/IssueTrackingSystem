<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane fx:id="detailsForm" prefHeight="383.0" prefWidth="433.0" style="-fx-background-color: #191d45;" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.itmd510.issuetrackingapplication.controllers.DetailsFormController">
    <children>
        <VBox layoutX="37.0" layoutY="24.0" prefHeight="260.0" prefWidth="360.0" spacing="10.0" style="-fx-padding: 20;">
            <children>
                <Label style="-fx-text-fill: white;" text="ID" />
                <TextField fx:id="idField" editable="false" style="-fx-background-color: #fff;" />
                <Label style="-fx-text-fill: white;" text="Title" />
                <TextField fx:id="titleField" style="-fx-background-color: #fff;" />
                <Label style="-fx-text-fill: white;" text="Description" />
                <TextField fx:id="descriptionField" style="-fx-background-color: #fff;" />
                <Label style="-fx-text-fill: white;" text="Status" />
                <TextField fx:id="statusField" style="-fx-background-color: #fff;" />
            </children>
        </VBox>

        <!-- HBox for the Alter button -->
        <HBox layoutX="51.0" layoutY="306.0" prefHeight="53.0" prefWidth="334.0" spacing="10.0" style="-fx-padding: 10;">
            <children>
                <Button fx:id="alterButton" onAction="#handleAlterButton" prefHeight="33.0" prefWidth="316.0" style="-fx-background-color: #6870d3; -fx-text-fill: white; -fx-padding: 8 15 8 15;" text="Alter" HBox.hgrow="ALWAYS" />
            </children>
        </HBox>
    </children>
</AnchorPane>
